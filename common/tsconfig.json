{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "declaration": true,
    "declarationDir": "./dist/esm",
    "outDir": "./dist/esm",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",

    "baseUrl": "./",
    "composite": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
