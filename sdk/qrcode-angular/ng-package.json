{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "glob": "**/*.json",
      "input": "src/lib/components/animations",
      "output": "animations"
    }
  ],
  "allowedNonPeerDependencies": [
    "angularx-qrcode",
    "ethers",
    "js-sha1",
    "js-sha256",
    "js-sha512",
    "lottie-web",
    "node-forge",
    "poseidon-lite",
    "socket.io-client",
    "uuid"
  ]
}
